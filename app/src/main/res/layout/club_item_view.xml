<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background_inset"
    android:orientation="horizontal"
    android:padding="20dp" >

    <ImageView
        android:id="@+id/club_item_imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"
        android:contentDescription="Club Logo"
        android:src="@drawable/avatar_missing_circle" />

    <com.asb.cdm.widgets.TextViewRT
        android:id="@+id/club_item_title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_toRightOf="@+id/club_item_imageView"
        android:textColor="#787878"
        android:textSize="20sp" />

    <com.asb.cdm.widgets.TextViewRCB
        android:id="@+id/club_item_description_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/club_item_title_textView"
        android:layout_marginBottom="6dp"
        android:layout_toRightOf="@+id/club_item_imageView"
        android:textColor="#888888"
        android:textSize="15sp" />

    <com.asb.cdm.widgets.TextViewRT
        android:id="@+id/club_item_meeting_times_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/club_item_description_textView"
        android:layout_toRightOf="@+id/club_item_imageView"
        android:textColor="#888888"
        android:textSize="15sp" />

</RelativeLayout>