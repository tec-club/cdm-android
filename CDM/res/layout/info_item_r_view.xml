<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background_inset"
    android:orientation="horizontal"
    android:padding="20dp" >

    <ImageView
        android:id="@+id/info_item_r_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/info_bell_schedule" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.ampelement.cdm.widgets.TextViewRT
            android:id="@+id/info_item_r_textView_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="6dp"
            android:textColor="#787878"
            android:textSize="20sp" />

        <com.ampelement.cdm.widgets.TextViewRCB
            android:id="@+id/info_item_r_textView_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textColor="#888888"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>